@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class='panel panel-success' style="margin-top: 10px;">
    <div class='panel-heading'>
        <span style="font-size:16pt; font-family:'Microsoft YaHei'">请输入数字.</span>
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <div class="form-group">
            <div class="col-md-6">
                <input type="text" class="form-control" id="txtNum" />
            </div>
            <div class="col-md-2">
                <input type="button" value="开始测算" id="btnSubmit" class="btn btn-default" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <span id="spResult" class="control-label"></span>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function() {
        $("#btnSubmit").one("click", function () {
            if ($("#txtNum").val() == "") {
                alert("请输入数字");
                return false;
            }

        });
    })
</script>
