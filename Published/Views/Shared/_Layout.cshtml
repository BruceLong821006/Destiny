<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        .bg {
            background:url('../../Content/Imgs/background_1.jpg');  
            filter:"progid:DXImageTransform.Microsoft.AlphaImageLoader(sizingMethod='scale')";  
            -moz-background-size:100% 100%;  
            background-size:100% 100%;
        }
    </style>
    <link href="~/Scripts/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/mloading/jquery.mloading.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/Biz/Common.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="display:block;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("易林正宗", "NumForecast", "Forecast", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("号码现象", "NumForecast", "Forecast")</li>
                    <li>@Html.ActionLink("姓名现象", "NameForecast", "Forecast")</li>
                    <li>@Html.ActionLink("易林卜事", "SixtyFourDong", "Forecast")</li>
                    @if (!string.IsNullOrEmpty(ViewBag.UserName) && ViewBag.RoleID == 2)
                    {
                        <li>@Html.ActionLink("笔画管理", "StrokeManagement", "Manage")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" id="divBody">
        @RenderBody()
        <footer>
            @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="@Url.Content("~/Scripts/datatables/media/js/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/Scripts/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/datatables-plugins/api/fnReloadAjax.js")"></script>
    <script src="@Url.Content("~/Content/mloading/jquery.mloading.js")"></script>
    @*@Scripts.Render("~/bundles/background")*@
    @RenderSection("scripts", required: false)
</body>
</html>
